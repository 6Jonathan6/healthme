// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema


model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String
  meals     Meal[]
}

model Meal {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  date      String
  alimento  String
  porcion   String
  calorias  String
  proteina  String
  carbs     String
  grasa     String
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
}

model Professional {
  id        Int     @id @default(autoincrement()
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  first_name String 
  last_name String
  email     String  @unique
  phone_number  Int 
  address    String
  years_experience  Int
}

model Macros {
   id        Int     @id @default(autoincrement()
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  calorias  String
  proteina  String
  carbohidratos String
  grasa     String
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}
